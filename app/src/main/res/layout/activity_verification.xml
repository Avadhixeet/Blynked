<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#ff11a3f1"

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@mipmap/img_name"
        android:layout_gravity="center"

       />
    </android.support.v7.widget.Toolbar>



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:hint="Enter mobile Number"
        android:id="@+id/txtName"
        android:textColorHint="#ff969696"
        android:textCursorDrawable="@drawable/mycursor"
        android:inputType="number"
android:gravity="center"
        android:theme="@style/MyEditTextTheme"
        android:singleLine="true"
        android:layout_centerInParent="true"

      />
    <com.example.admin.blynked.CircleProgressBar
        android:id="@+id/pBar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"

        android:layout_centerInParent="true" android:layout_toRightOf="@+id/txtName"
        app:mlpb_enable_circle_background="false"
        android:visibility="invisible"
        app:mlpb_arrow_width="10dp"
        app:mlpb_progress_stoke_width="5dp"
        />

    <ImageView android:id="@+id/v" android:layout_width="30dp" android:layout_height="30dp" android:layout_centerInParent="true" android:layout_toRightOf="@+id/txtName"
         />
    <RelativeLayout  android:layout_height="wrap_content" android:padding="10dp" android:layout_width="wrap_content" android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
       >
    <ImageView
        android:id="@+id/btnSendSMS"

        android:layout_width="80dp"
        android:layout_height="80dp"


        android:src="@drawable/mext_icon"

        />
</RelativeLayout>
</RelativeLayout>
