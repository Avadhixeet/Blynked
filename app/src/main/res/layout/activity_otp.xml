<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.priyankagupta.myapplication.Otp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#ff11a3f1"

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@mipmap/img_name"
            android:layout_gravity="center"

            />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout android:id="@+id/done"
        android:layout_gravity="center"
        android:layout_height="wrap_content" android:layout_width="match_parent"
        android:layout_below="@+id/tool_bar"

        android:layout_marginTop="82dp">

        <com.example.admin.blynked.RoundedImageView
            android:id="@+id/imag_icon"
            android:layout_width="110dp"
            android:layout_gravity="center"
            android:src="@drawable/proff"

            android:layout_height="110dp"

            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        </RelativeLayout>
    <com.example.admin.blynked.CircleProgressBar
        android:id="@+id/progressWithoutBg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        app:mlpb_enable_circle_background="false"
        android:visibility="invisible"
        app:mlpb_arrow_width="10dp"
        app:mlpb_progress_stoke_width="5dp"
        />
    <RelativeLayout  android:layout_height="wrap_content" android:padding="10dp" android:layout_width="wrap_content" android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:id="@+id/relativeLayout">
        <ImageView
            android:id="@+id/button1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/mext_icon"

            />
    </RelativeLayout>

    <EditText android:id="@+id/email" android:textColorHint="#ff969696"
        android:textCursorDrawable="@drawable/mycursor"  android:theme="@style/MyEditTextTheme" android:singleLine="true" android:layout_width="200dp"
        android:layout_height="40dp" android:hint="Enter Email id"
        android:gravity="center"
  android:layout_below="@+id/done"
android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
      />

    <EditText android:id="@+id/name" android:textColorHint="#ff969696"
        android:textCursorDrawable="@drawable/mycursor" android:singleLine="true"  android:theme="@style/MyEditTextTheme"
        android:layout_height="40dp" android:hint="Enter your Name" android:layout_width="200dp"
        android:gravity="center"
    android:layout_below="@+id/email"

        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
